.ui.sortable.table thead th:after {
    display: none;
    font-style: normal;
    font-weight: 400;
    text-decoration: inherit;
    content: '';
    height: 1em;
    width: auto;
    opacity: .8;
    margin: 0 0 0 .5em;
    font-family: Icons;
}

.ui.sortable.table thead th.sorted:after {
    display: inline-block;
}
.ui.sortable.table thead th.descending:after {
    content: '\e801';
}

.ui.sortable.table thead th.ascending:after {
    content: '\e800';
}